<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardReservas"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/bg_input_field"
    android:padding="20dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/ivIconeReservas"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_bookmark_24"
        app:tint="@color/status_reserved"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="Ícone de Reservas" />

    <TextView
        android:id="@+id/tvReservasTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Minhas Reservas"
        android:textColor="@color/text_primary_white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ivIconeReservas"
        app:layout_constraintTop_toTopOf="@id/ivIconeReservas" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Acompanhe o status das suas reservas ativas e cancele-as se necessário."
        android:textColor="@color/text_secondary_gray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tvReservasTitulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvReservasTitulo" />
</androidx.constraintlayout.widget.ConstraintLayout>