<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/bg_input_field"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvEmprestimoTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_primary_white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvPrazoDevolucao"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        tools:text="O Essência do Eterno (Impresso)" />

    <TextView
        android:id="@+id/tvEmprestimoAutor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/text_secondary_gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/tvEmprestimoTitulo"
        app:layout_constraintStart_toStartOf="@id/tvEmprestimoTitulo"
        app:layout_constraintTop_toBottomOf="@id/tvEmprestimoTitulo"
        tools:text="T.M. Lao" />

    <TextView
        android:id="@+id/tvPrazoDevolucao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_status_chip"
        android:paddingLeft="12dp"
        android:paddingTop="6dp"
        android:paddingRight="12dp"
        android:paddingBottom="6dp"
        android:textColor="@color/text_primary_white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvEmprestimoAutor"
        android:backgroundTint="@color/status_reserved"
        tools:text="15/11" />

    <View
        android:id="@+id/viewSeparator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/input_border_muted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEmprestimoAutor" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRenovar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_primary_button"
        android:text="Renovar Empréstimo"
        android:textAllCaps="false"
        android:textColor="@color/text_primary_white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewSeparator" />

</androidx.constraintlayout.widget.ConstraintLayout>