<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/bg_input_field"
    android:padding="20dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/ivIconeUsuarios"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_group_24"
        app:tint="@color/status_available_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="Ícone de Gerenciamento de Usuários" />

    <TextView
        android:id="@+id/tvUsuariosTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Gerenciar Usuários"
        android:textColor="@color/text_primary_white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ivIconeUsuarios"
        app:layout_constraintTop_toTopOf="@id/ivIconeUsuarios" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Pesquisar, ver histórico e bloquear contas de alunos."
        android:textColor="@color/text_secondary_gray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tvUsuariosTitulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUsuariosTitulo" />
</androidx.constraintlayout.widget.ConstraintLayout>